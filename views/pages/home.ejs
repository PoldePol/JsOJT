<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../partials/header") %>
  <style>
    /* Add the gradient to the body */
    body {
      background-image: linear-gradient(to bottom, #add8e6, #90ee90); /* Light blue to light green */
      background-size: cover;
      background-position: center;
      height: 100vh; /* Ensure full viewport height */
      margin: 0; /* Remove default margin */
    }
  </style>
</head>
<body class="bg-gray-100 text-gray-800">
  <div class="container mx-auto p-5">
    <h1 class="text-3xl font-bold text-center mb-5"></h1>

    <!-- 🔍 Search Form -->
    <form action="/search" method="GET" class="flex justify-center mb-5">
      <input type="text" name="name" placeholder="Search Pokémon..." class="px-4 py-2 border rounded-l-lg focus:outline-none">
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-r-lg">Search</button>
    </form>

    <!-- Pokémon List -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <% pokemonList.forEach(pokemon => { %>
        <a href="/pokemon/<%= pokemon.name %>" class="p-4 bg-white shadow rounded-lg text-center hover:shadow-xl">
          <p class="text-xl capitalize font-semibold"><%= pokemon.name %></p>
        </a>
      <% }); %>
    </div>
  </div>
  <%- include("../partials/footer") %>
</body>
</html>