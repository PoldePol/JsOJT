<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("../partials/header") %>
  </head>
  <body class="bg-gradient-to-b from-blue-300 to-green-300 min-h-screen flex justify-center items-center text-gray-800">
    <div class="pokedex bg-red-500 p-6 rounded-lg shadow-lg text-white w-96">
      <!-- Pokedex Header with Indicators -->
      <div class="flex justify-between items-center mb-4">
        <div class="w-4 h-4 bg-red-600 rounded-full"></div>
        <div class="w-4 h-4 bg-yellow-400 rounded-full"></div>
        <div class="w-4 h-4 bg-green-500 rounded-full"></div>
      </div>

      <!-- PokÃ©mon Display Screen -->
      <div class="bg-white text-black p-5 rounded-lg shadow">
        <div class="flex flex-col items-center">
          <img 
            src="<%= pokemon.sprites.front_default %>" 
            alt="<%= pokemon.name %>" 
            class="w-40 h-40 object-contain mb-3"
          />
          <h2 class="text-2xl font-semibold capitalize mb-3">
            <%= pokemon.name %> - #<%= pokemon.id %>
          </h2>
          <input 
            type="text" 
            class="w-4/5 p-2 border border-gray-300 rounded text-center mb-3" 
            value="<%= pokemon.name %>"
            placeholder="Enter Name or Number"
          />
          <p class="text-lg font-semibold">Height: <%= pokemon.height %></p>
          <p class="text-lg font-semibold">Weight: <%= pokemon.weight %></p>
          <p class="text-lg font-semibold">
            Type: <%= pokemon.types.map(t => t.type.name).join(', ') %>
          </p>
        </div>


      <!-- Back Button -->
      <a href="/" class="block text-center mt-4 bg-blue-500 hover:bg-blue-700 py-2 rounded text-white font-bold">
        Back
      </a>
    </div>

    <%- include("../partials/footer") %>
  </body>
</html>
